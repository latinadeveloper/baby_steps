<div>
  <h1> Explore Skills </h1>


  <%= form_for @accomplishment, url: child_skills_path(@child) do |f| %>
    <h2 id="explore-skills"> <%= @accomplishment.skill.title %> </h2>
    <%= f.hidden_field :skill_id %>
     skill completed? <%= f.check_box :perform %><br>
    <%= f.text_field :comment %> <br>

    <button id="left-button" type="button" class="btn btn-default btn-lg">
      <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span> 
    </button>
    <button id="right-button" type="button" class="btn btn-default btn-lg">
      <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span> 
    </button>
    <p id="ajax-notice"></p>
  <% end %>
  
</div>
